class tarjeta:
  def __init__(self):
    self.money=0
    self.colant=0 #linea del bondi anterior
    self.tiempoant=0 #hora del bondi anterior
    self.valido=False rue, se puede, false no
    self.vieja = viaje()
    self.viajes=[]
    
  def pagar(self,colectivo,horario):
    self.pay(self,cole,horario)
  
  def pay(self,colectivo,horario):
    if self.transbordo==true:
      if self.money>=1.90:
        self.money=self.money-1,90
        self.valido=false
        self.colant=0
        self.tiempoant=0
        self.vieja.tour(colectivo,horario,1.9)
        self.viaje.append (self.vieja)
        return true
    elif self.money>=5.75:
      self.money=self.money-5.75
      if self.valido==False:
        self.valido=True
        self.tiempoant=horario
        self.colant=colectivo.linea
        self.vieja.tour(colectivo,horario,5,75)
        self.viaje.append (self.vieja)
        return True
    else:
      return False
      
  def transbordo(self,horario,colectivo):
    self.horario=horario
    self.pi= self.horario-self.tiempoant
    if self.colant!=colectivo.linea and self.valido==True and pi<60:
      return True
    else:
      return False 

  
  def recarga(self,cant):
    self.cant=cant
    if self.cant==196:
      self.money=self.money+230
    elif self.cant==368:
      self.money=self.money+460
    else:
      self.money=self.money+self.cant
  def saldo(self):
    print str(self.money)
    return self.money
  
  def vrel(self):
    for i in self.viajes:
      print (str(i.horario) + " - " + str(i.monto) + " - " + str(i.emp) + " - " + (str(i.cole)) + " - " + (str(i.int)))
  
  
  
  
class medio(tarjeta):

  def pagar(self,horario):
    if horario<6:
      self.pay
    elif self.transbordo==True:
      if self.money>=0.96:
        self.money=self.money-0.96
        self.valido=false
        self.colant=0
        self.tiempoant=0
        return true
    elif self.money>=2.9:
      self.money=self.money-2.9
      if (self.valido==False):
        self.valido=True
        self.tiempoant=horario
        self.colant=colectivo.line
        return True
    else:
      return False
      
  # La onda es que si no esta en horario escolar vaya directamente a pay.    


class colectivo:
  def __init__(self,empresa,linea,interno):
    self.int=interno
    self.linea=linea
    self.cole=empresa
    
class viaje:
  def __init__(self):
    self.monto=0
    self.horario=0
    self.company=""
    self.cole=0
    self.interno=0
  def tour(self,horario,monto,cole,interno,company):
    self.hora=horario
    self.monto=monto
    self.cole=cole
    self.interno=interno
    self.company=company


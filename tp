class medio(tarjeta):

  def pagar(self,horario):
    if horario<6:
      self.pay
    elif self.transbordo=true:
    if self.money>=0.96:
        self.money=self.money-0.96
        self.valido=false
        self.colant=0
        self.tiempoant=0
        return true
    elif self.money>=2.9:
      self.money=self.money-2.9
      if self.valido=false:
        self.valido=true
        self.tiempoant=#tiempo actual
        self.colant=colectivo.line
        return true
    else:
      return false
      
  # La onda es que si no esta en horario escolar vaya directamente a pay.    


class colectivo:
  def __init__(self,empresa,linea,interno):
    self.int=interno
    self.linea=linea
    self.cole=empresa
    
class viaje:
  def __init__(self):
    self.monto=0
    self.horario=0
    self.emp=""
    self.cole=0
    self.int=0
  def tour(self,monto,cole,emp,horario,int):
    self.hora=horario
    self.monto=monto
    self.cole=colectivo
    self.int=int
    self.emp=emp

